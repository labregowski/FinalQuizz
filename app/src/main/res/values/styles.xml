<resources>

    <!-- Base application theme. NOTE: removing ActionBarHere -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customized using https://www.materialpalette.com/brown/green -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="primary_light">@color/primary_light</item>
        <item name="primary_text">@color/primary_text</item>
        <item name="secondary_text">@color/secondary_text</item>
        <item name="icons">@color/icons</item>
        <item name="divider">@color/divider</item>
    </style>

    <!--General Sizes-->
    <style name="hWrap_vWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="hMatch_vMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="hMatch_vWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="hWrap_vMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--Global Container-->
    <style name="globalContainer" parent="hMatch_vWrap">
        <item name="android:padding">16dp</item>
    </style>

    <!--General TextViews-->
    <style name="generalTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>


</resources>
