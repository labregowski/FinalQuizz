<resources>

    <!-- Base application theme. NOTE: removing ActionBarHere -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customized using https://www.materialpalette.com/brown/green -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--General Sizes-->
    <style name="hWrap_vWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="hMatch_vMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="hMatch_vWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="hWrap_vMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--Global Container-->
    <style name="globalContainer" parent="hMatch_vWrap">
        <item name="android:padding">16dp</item>
    </style>

    <!--Group Title TextViews-->
    <style name="groupTitleTextView" parent="hMatch_vWrap">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="checkOrRadioElement" parent="hWrap_vWrap">
        <item name="android:layout_margin">4dp</item>
    </style>

    <!--Buttons-->
    <style name="standardButton" parent="hWrap_vWrap">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>


    <!--General TextViews TODO not in USE-->
    <style name="generalTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

</resources>
